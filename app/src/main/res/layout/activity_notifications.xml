<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resizebg"
    tools:context="com.whereyou.techease.activities.Notifications">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvNotif1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Notifications #1"
        android:padding="10dp"
        android:textSize="20dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvn1it1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Item #1"
            android:textColor="#fff"
            android:padding="10dp"
            android:textSize="18dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:supportsRtl="true"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/tvn1it2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Item #2"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvn1it3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Item #3"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvNotif2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications #2"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvn2it1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Item #1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/back"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvn2it2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Item #2"
            android:textSize="18dp"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_weight="1" />
       <TextView
           android:id="@+id/tvn2it2tv2"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:text="23.42 Gb"
           android:textColor="#fff"
           android:padding="10dp"
           android:gravity="right"
           android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvn2it3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Item #3"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tvn2it3tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="20.43 Gb"
            android:textColor="#fff"
            android:padding="10dp"
            android:gravity="right"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications #3"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/tvNotif3">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tvn3it1"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_height="50dp"
            android:text="Item #1"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnn3it1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="100dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvn3it2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Item #2"
            android:textSize="18dp"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnn3it2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="100dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvn3it3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Item #3"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tvn3it3tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="20.43 Gb"
            android:padding="10dp"
            android:textColor="#fff"
            android:gravity="right"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>
